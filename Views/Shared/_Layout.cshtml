<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Kitap Sepeti</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        /* Mocamousse kahve tonları paleti */
        body {
            background-color: #f4ede7; /* açık krem */
            color: #4b3832; /* koyu kahve */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* Navbar kahverengimsi */
        .navbar-custom {
            background-color: #6f4e37; /* kahverengi */
        }

            .navbar-custom .navbar-brand,
            .navbar-custom .nav-link {
                color: #f4ede7; /* açık krem */
                transition: color 0.3s;
            }

                .navbar-custom .nav-link:hover,
                .navbar-custom .nav-link.active {
                    color: #d7ccc8; /* açık kahve tonları */
                }

        /* Footer */
        footer {
            background-color: #3e2723; /* koyu kahve */
            color: #d7ccc8;
        }

        /* Kartlar için */
        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 6px 12px rgba(111, 78, 55, 0.25);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: translateY(-8px);
                box-shadow: 0 10px 20px rgba(111, 78, 55, 0.4);
            }

        .btn-success {
            background-color: #a67b5b;
            border: none;
        }

            .btn-success:hover {
                background-color: #7c5e42;
            }

        /* Başlık */
        h1.display-5 {
            color: #5d4037; /* orta kahve */
            font-weight: 700;
        }

        /* Arama kutusu ve buton */
        input.form-control {
            border: 2px solid #a67b5b;
            box-shadow: none;
        }

            input.form-control:focus {
                border-color: #7c5e42;
                box-shadow: 0 0 8px #7c5e42;
            }

        button.btn-primary {
            background-color: #7c5e42;
            border: none;
        }

            button.btn-primary:hover {
                background-color: #a67b5b;
            }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container">
            <a class="navbar-brand" href="/">Kitap Sepeti</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon" style="filter: invert(1);"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="/">Anasayfa</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Book">Kitaplar</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Order">Siparişler</a></li>
                    <li class="nav-item"><a class="nav-link" href="/User">Profil</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Cart">Sepetim</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Ana İçerik -->
    <div class="container mt-5 mb-5">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="text-center py-4">
        <div class="container">
            &copy; 2025 Kitap Sepeti | Tüm hakları saklıdır.
        </div>
    </footer>

</body>
</html>
