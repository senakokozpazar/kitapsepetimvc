@model kitapsepetimvc.Models.Book

@{
    ViewData["Title"] = Model.Title;
}

<div class="container my-4">
    <div class="row">
        <div class="col-md-4">
            <img src="@Url.Content($"~{Model.ImageUrl}")" class="img-fluid rounded" alt="@Model.Title" />
        </div>
        <div class="col-md-8">
            <h1>@Model.Title</h1>
            <h4 class="text-muted">Yazar: @Model.Author</h4>
            <h5>Kategori: @Model.Category?.Name</h5>
            <p class="mt-3">@Model.Description</p>
            <p class="fw-bold text-primary">@Model.Price.ToString("C")</p>

            @if (Model.Stock > 0)
            {
                <form method="post" asp-controller="Cart" asp-action="AddToCart" class="mt-3">
                    <input type="hidden" name="bookId" value="@Model.Id" />
                    <button type="submit" class="btn btn-success">Sepete Ekle</button>
                </form>
            }
            else
            {
                <span class="text-danger fw-semibold">Stokta yok</span>
            }

            <a asp-action="Index" class="btn btn-link mt-3">Geri Dön</a>
        </div>
    </div>
</div>
